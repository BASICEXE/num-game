html
  font-size: 10px
#app
  background-image: url('../assets/main.jpg')
  background-size: cover;
  position: relative;
  height: 100vh;
  color: #fff;
  z-index: 1;
  &:after
    content: '';
    display: block;
    background-color: rgba(0,0,0,0.8);
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: -10;
.title
  margin-top: 3rem
  font-size: 3rem
  font-weight: normal
  display: none;
.userNum
  border: solid 1px #aaa
  border-radius: 5px
  padding: 0.5em 1em
  margin: 1em auto
  font-size: 3rem
  text-align: center
  color: #fff;
.errorMessage
  color: #ff6b00
  margin-bottom: 1em
  font-size: 1.8rem
  height: 2.6rem;
.gameInfo
  font-size: 1.8rem
  border-radius: 5px
  border: solid 1px #aaa
  padding: 1em
  &__text
    margin-bottom: 1em;
.btnWap
  display: flex
  flex-wrap: wrap
  justify-content: space-between
.btn
  display: block
  padding: 0.8em 0
  width: 100%
  border: solid 1px #aaa
  margin: 0.7em auto
  font-size: 1.8rem
  border-radius: 5px
  &--answer
    background-color: #3cb371
    border-color: #3cb371
    color: #fff
  &--stop
    border-color: #ff7000
    background-color: #111
    color: #ff7000
.home
  max-width: 900px
  margin: auto
  text-align: center
  padding: 1em
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate( -50%, -50% )
.systemMessage
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0,0,0,0.8);
  display: flex;
  &__inner
    width: 50%
    margin: 30% auto;
    text-align: center;
    font-size: 5rem;
  &__message
    margin-bottom: 1em;
